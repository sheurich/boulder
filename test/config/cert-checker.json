{
  "certChecker": {
    "db": {
      "dbConnectFile": "test/secrets/cert_checker_dburl",
      "maxOpenConns": 10
    },
    "hostnamePolicyFile": "test/hostname-policy.yaml",
    "workers": 16,
    "unexpiredOnly": true,
    "badResultsOnly": true,
    "checkPeriod": "72h",
    "acceptableValidityPeriods": [7775999, 7776000],
    "ignoredLints": [
      "n_subject_common_name_included"
    ]
  },

  "pa": {
    "challenges": {
      "http-01": true,
      "dns-01": true,
      "tls-alpn-01": true
    }
  },

  "syslog": {
    "stdoutlevel": 6,
    "sysloglevel": 6
  }
}
